<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".chat">

    <View
        android:id="@+id/fundoVerdeSaudacao2"
        android:layout_width="452dp"
        android:layout_height="97dp"
        android:background="@drawable/fundo_verde_arredondado"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="57dp"
        android:layout_height="80dp"
        android:layout_marginBottom="792dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/app" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHAT"
        android:elevation="4dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fundoVerdeSaudacao2"
        app:layout_constraintEnd_toEndOf="@+id/fundoVerdeSaudacao2"
        app:layout_constraintStart_toStartOf="@+id/fundoVerdeSaudacao2"
        app:layout_constraintTop_toTopOf="@+id/fundoVerdeSaudacao2" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="410dp"
        android:layout_height="813dp"
        android:background="#D9D9D9"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/options_scrollview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundoVerdeSaudacao2"
        app:layout_constraintVertical_bias="1.0"
        app:stackFromEnd="true"
        tools:listitem="@layout/item_chat_bot" />

    <ScrollView
        android:id="@+id/options_scrollview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:maxHeight="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp" />
    </ScrollView>

    <ImageButton
        android:id="@+id/Btn_Voltar"
        android:layout_width="43dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Voltar"
        android:elevation="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="#5EAF6D"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>