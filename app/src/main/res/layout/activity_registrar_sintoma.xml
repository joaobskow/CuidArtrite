<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9FAFB"
    tools:context=".Registrar_Sintoma">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fundo_verde_arredondado"
            android:elevation="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/app"
                android:elevation="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Registrar novo sintoma"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/tvQualSeuSintoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:text="Qual seu sintoma?"
            android:textColor="#4BAE60"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout" />

        <!-- Card de entrada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInputs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQualSeuSintoma">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:dividerPadding="8dp">

                <EditText
                    android:id="@+id/editDescricaoSintoma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/fundo_cinza_arredondado"
                    android:hint="SINTOMA"
                    android:inputType="textCapSentences"
                    android:maxLength="50"
                    android:padding="12dp"
                    android:textColorHint="@color/text_color_hint" />

                <EditText
                    android:id="@+id/editDataSintoma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/fundo_cinza_arredondado"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="DATA"
                    android:inputType="date"
                    android:padding="12dp"
                    android:textColorHint="@color/text_color_hint" />

                <EditText
                    android:id="@+id/editLocalSintoma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fundo_cinza_arredondado"
                    android:hint="LOCAL DO CORPO"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:padding="12dp"
                    android:textColorHint="@color/text_color_hint" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card nível de dor -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNivelDor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardInputs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/labelNivelDor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÍVEL DA DOR"
                    android:textColor="#64748B"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/layoutBotoesNivelDor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Botão Leve -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDorLeve"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Leve"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#5EAF6D"
                        app:rippleColor="#A7F3D0"
                        app:cornerRadius="16dp" />

                    <!-- Botão Média -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDorMedia"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Média"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#E0C302"
                        app:rippleColor="#FEF08A"
                        app:cornerRadius="16dp" />

                    <!-- Botão Grave -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDorGrave"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grave"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#EF4444"
                        app:rippleColor="#FCA5A5"
                        app:cornerRadius="16dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Descrição -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardNivelDor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/editObservacaoSintoma"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/fundo_cinza_arredondado"
                    android:gravity="top"
                    android:hint="DESCRIÇÃO"
                    android:inputType="textCapSentences|textMultiLine"
                    android:padding="12dp"
                    android:textColorHint="@color/text_color_hint" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botão Confirmar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmarSintoma"
            style="?attr/materialButtonStyle"
            android:layout_width="262dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#5EAF6D"
            android:text="Confirmar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardDescricao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão Voltar -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCircular"
            android:layout_width="53dp"
            android:layout_height="60dp"
            android:backgroundTint="#5EAF6D"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirmarSintoma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
